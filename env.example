# Solana RPC Configuration
# DEVNET (for testing - recommended to start here)
SOLANA_RPC_URL=https://api.devnet.solana.com

# MAINNET (for production - only after testing on devnet)
# SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# Alternative premium RPC endpoints:
# SOLANA_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# SOLANA_RPC_URL=https://rpc.helius.xyz/?api-key=YOUR_API_KEY

# Network (devnet or mainnet-beta)
NETWORK=devnet

# Wallet Configuration
# Path to your wallet keypair JSON file (e.g., /path/to/wallet.json)
WALLET_KEYPAIR_PATH=./wallet.json

# CSV File Path
# Path to CSV file containing NFT metadata
# Update this to your actual CSV file (e.g., ./dogecapital.csv)
CSV_FILE_PATH=./nft_metadata.csv

# Batch Configuration
# Number of NFTs to process in each batch
BATCH_SIZE=25

# Delay between batches in milliseconds
BATCH_DELAY_MS=500

# Dry Run Mode (true/false)
# If true, only simulates updates without sending transactions
DRY_RUN=true

# Skip Confirmation Prompt (true/false)
# If true, skips the confirmation prompt before starting
SKIP_CONFIRM=false

# NFT Range (optional)
# Process only specific range of NFTs (leave empty to process all)
# Format: START_INDEX-END_INDEX (e.g., 0-100)
NFT_RANGE=

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# Checkpoint Configuration
# Save progress checkpoint every N NFTs
CHECKPOINT_INTERVAL=100

# Resume from checkpoint (true/false)
RESUME_FROM_CHECKPOINT=false

# Log Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/update_log.json

